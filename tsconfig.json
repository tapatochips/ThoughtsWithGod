{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@firebase/auth": [
        "./node_modules/@firebase/auth/dist/index.rn.d.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "__tests__/*",
    "**/*.test.*"
  ],
  "include": [
    "*.ts",
    "*.tsx",
    "combinedBible.d.ts",
    "src/services/firebase/firebaseReactNative.tsx",
    "App.tsx",
    "functions/src/index.tsx"
  ],
  "extends": "expo/tsconfig.base"
}