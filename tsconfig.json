{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@firebase/auth": [
        "./node_modules/@firebase/auth/dist/index.rn.d.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "__tests__/*",
    "**/*.test.*"
  ],
  "include": [
    "*.ts", "*.tsx", // Or wherever your .ts files are
    "combinedBible.d.ts" // Include the declaration file
  ],
  "extends": "expo/tsconfig.base"
}